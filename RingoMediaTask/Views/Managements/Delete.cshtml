@model RingoMediaTask.Models.Entities.Management

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Management</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class="col-sm-10">
            @{
                var base64Str = ImageHelper.ConvertByteArrayToBase64(Model.Logo);
                var mimeType = ImageHelper.GetMimeTypeFromImageByteArray(Model.Logo);
            }
            <img src="data:@mimeType;base64,@base64Str" alt="Logo" style="width: 100px; height: auto;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Model.Department.Name
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Active" : "Deactivated")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdManagement" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
