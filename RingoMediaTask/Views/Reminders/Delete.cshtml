@model RingoMediaTask.Models.Entities.Reminder

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Reminder</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReminderFor)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailForReminder)
        </dd>
        <dt class = "col-sm-2">
            Date And Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReminderDateTime)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @(Model.IsProcessing == 1 ? "Processing" : Model.IsProcessing == 2 ? "Completed" : "Stopped")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdReminder" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
