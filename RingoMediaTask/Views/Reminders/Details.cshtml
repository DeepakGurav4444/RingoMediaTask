@model RingoMediaTask.Models.Entities.Reminder

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reminder</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReminderFor)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailForReminder)
        </dd>
        <dt class = "col-sm-2">
            Date and Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReminderDateTime)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @(Model.IsProcessing ==1?"Processing":Model.IsProcessing==2?"Completed":"Stopped")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdReminder">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
